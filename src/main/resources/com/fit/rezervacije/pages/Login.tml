<html t:type="layout" title="rezervacije Index"
	t:sidebarTitle="Framework Version"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">
<!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->


<t:form id="login" class="col-lg-6">
	<fieldset>
		<legend>Login</legend>

		<div class="form-group col-lg-6">
			<t:Label t:for="username" />
			<t:TextField t:value="k.username" t:id="username"
				class="form-control" />
		</div>
		<div class="form-group col-lg-6">
			<t:Label t:for="password" />
			<t:PasswordField t:value="k.password" t:id="password"
				class="form-control" />
		</div>
		<div class="form-group  col-lg-6">
			<t:Submit class="form-control btn btn-success" />
		</div>
			<div class="form-group  col-lg-6">
				<t:PageLink t:page="Registracija"
					class="form-control btn btn-primary">Registruj korisnike</t:PageLink>
			</div>
	</fieldset>
</t:form>
</html>
